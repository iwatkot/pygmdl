{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Dev",
            "type": "debugpy",
            "request": "launch",
            "program": "tests/dev.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "LOG_LEVEL": "DEBUG",
            }
        },
        {
            "name": "Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
              "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}